{
  "manifest_version": 3,
  "name": "Video Sync",
  "version": "1.0",
  "description": "Synchronizes video playback across multiple browsers.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html"
}
