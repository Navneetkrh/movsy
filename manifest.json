{
  "manifest_version": 3,
  "name": "Video Sync by Navneet",
  "version": "1.0.0",
  "description": "Synchronize video playback across browsers with chat support",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "ws://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["config.js", "notifications.js", "chat-handler.js", "content.js"],
      "css": ["apple-ui.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Movsy"
  },
  "options_page": "options.html",
  "author": "Navneet"
}